{
    "manifest_version": 2,

    "name": "Salesforce1 Launcher",
    "description": "Launch Salesforce1 in a popup window.",
    "version": "0.0.3",

    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },

    "permissions": [
//        "https://*.salesforce.com/",
        "webview",
        "alwaysOnTopWindows"
    ],

    "icons": {
        "16": "salesforce1.png",
        "48": "salesforce1.png",
        "128": "salesforce1.png"
    }
}